global
  log /dev/log  local0
  log /dev/log  local1 notice
  stats socket /var/lib/haproxy/stats level admin
  chroot /var/lib/haproxy
  user haproxy
  group haproxy
  daemon

defaults
  log global
  mode  http
  option  httplog
  option  dontlognull
        timeout connect 5000
        timeout client 50000
        timeout server 50000

frontend hafrontend
    bind *:{{ http_port }}
    mode http
    default_backend app-servers

backend app-servers
    mode http
    balance roundrobin
    option forwardfor
    {% set srvindex = 0 %}
    {%- for host in groups['webserver'] %}
    {%- if 'web' in hostvars[host].name %}
    {%- set srvindex = srvindex + 1 %}
      server server{{ srvindex }} {{ hostvars[host].ansible_ssh_host }}:{{ http_port }} cookie {{ hostvars[host].ansible_ssh_host }} check
    {% endif %}
    {%- endfor %}
